def cuang():
    zi = {}
    print("欢迎来到荒岛体验系统".center(50,"*"))
    while True:
        print("账号等于11位并且都是纯数字才可以哦")
        acc = input("请注册账号")
        if len(acc) == 11 and acc.startswith("1"):
            break
        else:
            print("输入有误")
            continue
    while True:
        print("密码必须6位以上哦")
        pwd = input("请输入密码")
        if len(pwd)> 6:
            break
        else:
            print("输入有误")
            continue
    if len(acc) == 11 and acc.startswith("1") and len(pwd)> 6:
        print("注册成功")
        zi["acc"] = acc
        zi["pwd"] = pwd
        list1.append(zi)
        deng()
