def xuan():
    print("欢迎主人来到荒岛体验系统".center(50,"*"))
    tian()
    while True:
        print_d()
        a = input("请输入您的选择")
        if a.isdigit():
            a = int(a)
        else:
            print("登录失败")
        if a == 1:
            print_1()
        elif a == 2:
            print_2()
        elif a == 3:
            print_3()
        elif a == 4:
            print_4()
        elif a == 5:
            print_5()
        elif a == 6:
            print_6()
        elif a == 0:
            break
