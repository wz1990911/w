def print_2():
    print("健康\t体力\t水分")
    for position,i in enumerate(list3):
        print(i["jian"],"\t",i["ti"],"\t",i["shui"])   
def print_jian():
    for position,i in enumerate(list3):
        i["jian"] = i["jian"]-3
        i["ti"] = i["ti"]-3
        i["shui"] = i["shui"]-3
        if i["jian"] < 20:
            print("j健康快到极限了")
            print("请尽快医治")
        elif i["ti"] < 10:
            print("体力快到极限了")
            print("请尽快补充体力")
        elif i["shui"] < 15:
            print("水分快到极限了")
            print("请尽快补充水分")
def print_3():
